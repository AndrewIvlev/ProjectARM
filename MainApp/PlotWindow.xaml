<Window x:Class="ArmManipulatorApp.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:ArmManipulatorApp"
        xmlns:viewModel="clr-namespace:ArmManipulatorApp.ViewModel"
        Title="Plot Window" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:DeltaPlotModel x:Name="deltaPlotViewModel"/>
    </Window.DataContext>
    <Grid>
        <oxy:Plot x:Name="DeltaPlot" Title="{Binding Title}">
            <oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding Points}"/>
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</Window>